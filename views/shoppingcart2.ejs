        <p>Pincode</p>
        <input class="input2 address1" name="pincode" id="pincode" placeholder="H3H 2N3" required>
      </div>
      <div class="col">
        <p>Phone</p>
        <input class="input2 address1" name="phone" id="phone" placeholder="514-575-5625"   >
      </div>

