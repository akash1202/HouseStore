<body>
    <header class="cl-header">
        <div>
            <img src="/images/logo.jpg" alt="logo" class="cl-logo"/>
            <h3 class="cl-company-name">
                <b>House Store</b>
            </h3>
            <span>
                <a href="Home">Home</a>
                <a href="products">Addproduct</a>
                <a href="logoutme">Logout</a>
       </div>
    </header>
    <center>
        <h2 class="heading">Cart Products</h2>
        <br>
       <div class="cart-box" id="cart-box"> 
        <table style="width: 800px" id="table" class="table">
            <thead class="cart-header">
                <th colspan="2">
                    <b>Name</b>
                </th>
                <th>
                    <b></b>
                </th>
                <th>
                    <b>Price</b>
                </th>
                <th>
                    <b>Quantity</b>
                </th>
                <th>
                    <b>Amount</b>
                </th>
                <th></th>
            </thead>
            <tbody id="cartbody">
            <div id="cartbody">    
       <%
             console.log('client side',usertype,items.length,udata,items); 
            if(usertype=='customer'){ 
               var total=0,sumTotal=0;
               items=items[0];
       %>
       <div class="cartid" id="cartid" hidden><%=items[0].cart_id%></div>
       <div class="customerid" hidden><%=items[0].customer_id%></div>
       <%

                        for(var i=0;i < items.length;i++){ 
                            total=(items[i].price*items[i].quantity);
                            sumTotal+=total;
       %><div id="<%=items[i].id%>" class="item">
                            <tr id="<%=items[i].product_id%>">
                            <td><img src='<%=items[i].image%>' alt="<%=items[i].name%>" width="100" height="80"></td>    
                            <td class="item-name"><%=items[i].name %></td>
                            <td></td>
                            <td class="item-price">$<%=items[i].price %></td>
                            <td class="item-count">
                                <button class="item-drop"> - </button>
                                <div class="item-count-in-cart"><%=items[i].quantity %></div>
                                <button class="item-add" > + </button>
                            </td>
                            <td class="item-total">$<%=total%> </td>
                            <td class="item-remove">Remove</td>
                        </tr>  </div>
                           <%  
                        }
                           %>
                           <tr style="background-color: white; font-size: 24px">
                            <td></td>
                            <td style="color: black">
                                <b>Total</b>
                            </td><td><td><td>
                            <td class="cart-total">
                                $<%=sumTotal%></td>
                        </tr>
                           <%
                    }  
            %>                  
            %>
      <div>
            </tbody>
            </table>
            <fieldset class="register-register-button-container">
                <button class="register-register-button">Pay Now</button>
            </fieldset>
            </div>   
            <!-- end of cart -->
