<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="css/style.css">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js" type="text/javascript"></script>
    <script src="js/allorders.js" type="text/javascript" async></script>
    <title>Cart</title><style>
         h1 {
            font-size: 2.5em;
            color: rgb(10, 129, 158);
            text-align: center;
        }
        
        h2 {
            font-size: 2.8em;
            color: rgb(21, 165, 129);
            text-align: center;
        }

        
        h3 {
            font-size: 2em;
            color: rgb(21, 165, 129);
            margin-bottom: 1em;

        }

    </style>
</head>

<body>
    <header class="cl-header">
        <div>
            <img src="/images/logo.jpg" alt="logo" class="cl-logo"/>
            <h3 class="cl-company-name">
                <b>House Store</b>
            </h3>
            <nav class="cl-nav">
                <span>
                        <a href="Home">Home</a>
                        <a href="products">Products</a>
                        <a href="logoutme">Logout</a>
                </span>        
            </nav>
        </div>
    </header>
    <center>
        <br/>
        <br/>
        <h2 class="heading">All Orders</h2>
        <br>
        <table style="width: 800px" id="table" class="table">
            <thead class="cart-header">
                <th colspan="2">
                    <b>Name</b>
                </th>
                <th>
                    <b></b>
                </th>
                <th>
                    <b>Price</b>
                </th>
                <th>
                    <b>Quantity</b>
                </th>
                <th>
                    <b>Amount</b>
                </th>
                <th>
                    <b>Ordered</b>
                </th>
                <th>
                    <b>Date</b>
                </th>
                <th>
                    <b>Time</b>
                </th>
                <th></th>
            </thead>
            <tbody id="cartbody">
            <div id="cartbody">    
       <%
             console.log('client side',usertype,items[0].length,udata,items[0]); 
            items=items[0];
             if(usertype=='employee'){ 
               var total=0,sumTotal=0;
                        for(var i=0;i < items.length;i++){ 
                            total=(items[i].price*items[i].quantity);
                            sumTotal+=total;
       %>               <div id="<%=items[i].id%>" class="item">
                            <tr>
                            <td><img src='<%=items[i].image%>' alt="<%=items[i].name%>" width="100" height="80"></td>    
                            <td class="item-name"><%=items[i].name %></td>
                            <td></td>
                            <td class="item-price">$<%=items[i].price %></td>
                            <td class="item-count">
                                <div class="item-count-in-cart">
                                <%=items[i].quantity %></div>
                            </td>
                            <td class="item-total">$<%=total%> </td>
                            <td ><%=items[i].buyer%></td>
                            <td ><%=items[i].modified.substring(0,10)%></td>
                            <td ><%=items[i].modified.substring(11,16)%></td>
                            <td id="<%=items[i].id%>" class="item-remove">Remove</td></td>
                        </tr>  </div>
                           <%  
                        }
                           %>
                           <tr style="background-color: white; font-size: 24px">
                            <td></td>
                            <td style="color: black">
                                <b>Total</b>
                            </td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td class="cart-total">   
                                $<%=sumTotal%>
                            </td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td> 
                        </tr>
                        <tr>
                            <td>Last Ordered: <%=items[items.length-1].modified.substring(0,10)%></td>
                            <td></td>
                            <td>Time: <%=items[items.length-1].modified.substring(11,16)%></td>
                            <td></td>
                            <td>Ordered by: <%=items[items.length-1].buyer%></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td>
                        </tr>
                           <%

                    }  
            %>                  
            %>
<div>
            </tbody>
            </table>
    </center>
</body>
</html>    